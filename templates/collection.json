{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        ".collection-hero__title {margin: 2.5rem 0; text-align: center;}"
      ],
      "settings": {
        "show_collection_description": false,
        "show_collection_image": false,
        "color_scheme": "background-1"
      }
    },
    "collapsible_content_ccp73d": {
      "type": "collapsible-content",
      "blocks": {
        "collapsible_row_QMtRer": {
          "type": "collapsible_row",
          "settings": {
            "heading": "Why choose {{ collection.title }} from Nanshy?",
            "icon": "chat_bubble",
            "row_content": "{{ collection.metafields.custom.collection_text_rich | metafield_tag }}",
            "page": ""
          }
        }
      },
      "block_order": [
        "collapsible_row_QMtRer"
      ],
      "settings": {
        "caption": "",
        "heading": "",
        "heading_size": "h2",
        "heading_alignment": "left",
        "layout": "none",
        "color_scheme": "background-1",
        "container_color_scheme": "background-1",
        "open_first_collapsible_row": false,
        "image_ratio": "adapt",
        "desktop_layout": "image_second",
        "padding_top": 0,
        "padding_bottom": 0
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "settings": {
        "products_per_page": 16,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": false,
        "enable_filtering": true,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "collapsible_content_ccp73d",
    "product-grid"
  ]
}
